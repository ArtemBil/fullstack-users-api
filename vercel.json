{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@now/node-server"
    },
    {
      "src": "client/build/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.ts" },
    { "src": "/(.*)", "dest": "client/build/index.html" }
  ]
}